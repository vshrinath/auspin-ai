# Salient Platform Environment Variables
# Copy this file to .env and fill in your actual values

# ===== AUTHENTICATION =====
# WorkOS Authentication
WORKOS_CLIENT_ID=your_workos_client_id_here
WORKOS_API_KEY=your_workos_api_key_here
WORKOS_REDIRECT_URI=http://localhost:3000/auth/callback
WORKOS_AUTHKIT_ENDPOINT=https://api.workos.com/sso/authorize

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Additional OAuth Providers (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ===== DATABASE & STORAGE =====
# Primary Database
DATABASE_URL=postgresql://user:password@localhost:5432/salient_db

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# File Storage (choose one)
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Supabase Storage (alternative)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key

# ===== COMMUNICATION =====
# Email Service (choose one)
# Resend
RESEND_API_KEY=your_resend_api_key

# SendGrid (alternative)
SENDGRID_API_KEY=your_sendgrid_api_key

# Twilio (SMS/Phone)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ===== AI & EXTERNAL APIS =====
# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key

# ===== PAYMENTS =====
# Stripe
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ===== ANALYTICS & MONITORING =====
# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Monitoring
SENTRY_DSN=your_sentry_dsn

# Google Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# ===== APPLICATION CONFIGURATION =====
# API Configuration
API_BASE_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://localhost:4321

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AI_FEATURES=false
ENABLE_PAYMENTS=false

# Development
NODE_ENV=development
LOG_LEVEL=debug