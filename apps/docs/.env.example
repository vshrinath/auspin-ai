# Astro Docs App Environment Variables
# Copy this file to .env and fill in your actual values

# ===== PUBLIC ENVIRONMENT VARIABLES =====
# API Endpoints (accessible in browser)
PUBLIC_API_URL=http://localhost:8000
PUBLIC_APP_URL=http://localhost:3000

# Analytics (public keys)
PUBLIC_POSTHOG_KEY=your_posthog_key
PUBLIC_POSTHOG_HOST=https://app.posthog.com
PUBLIC_GA_ID=your_google_analytics_id

# Feature Flags (public)
PUBLIC_ENABLE_ANALYTICS=true
PUBLIC_ENABLE_SEARCH=true
PUBLIC_ENABLE_COMMENTS=false

# ===== PRIVATE ENVIRONMENT VARIABLES =====
# WorkOS Authentication (if using auth in docs)
WORKOS_CLIENT_ID=your_workos_client_id_here
WORKOS_API_KEY=your_workos_api_key_here

# Content Management
# GitHub (for content updates)
GITHUB_TOKEN=your_github_token
GITHUB_REPO=your-username/your-repo

# Search (if using Algolia or similar)
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key
ALGOLIA_INDEX_NAME=your_index_name

# Comments (if using service like Giscus)
GISCUS_REPO=your-username/your-repo
GISCUS_REPO_ID=your_giscus_repo_id
GISCUS_CATEGORY_ID=your_giscus_category_id

# Development
NODE_ENV=development